<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SignFlow</title>
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/all.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    @if (ViewData["CustomCss"] != null)
    {
        <link rel="stylesheet" href="@ViewData["CustomCss"]" asp-append-version="true" />
    }

</head>

<body>
    <header>
        <img src="~/img/logo2.gif" alt="">
        <div id="bellbox">
            <img src="~/img/bell2.gif" alt="">
            <span>+</span>
        </div>
        @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SignFlow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav> *@
    </header>
    <div id="container">
        <nav>
            <div id="menu">
                <div id="userinfo" class="text-desktop">
                    <img src="~/img/user圖片.png" alt="">
                    <span>登入身分:XXX</span>
                    <p>王XX你好</p>
                </div>
                <ul>
                    <li>
                        <h3>管理者設定</h3>
                        <ul class="text-desktop">
                            <li>
                                <img src="~/img/房子圖片.png" alt="初始設定圖示">
                                初始設定
                            </li>
                        </ul>
                    </li>
                    <li>
                        <h3>表單申請區</h3>
                        <ul class="text-desktop">
                            <li>
                                <img src="~/img/drafts.gif" alt="草稿區圖示">
                                草稿區
                            </li>
                            <li>
                                <img src="~/img/apply.gif" alt="表單申請狀態圖示">
                                表單申請狀態
                            </li>
                        </ul>
                    </li>
                    <li>
                        <h3>表單簽核區</h3>
                        <ul class="text-desktop">
                            <li>
                                <img src="~/img/sign.gif" alt="待簽核表單圖示">
                                待簽核表單
                            </li>
                        </ul>
                    </li>
                    <li>
                        <h3>操作</h3>
                        <ul class="text-desktop ">
                            <li class="menulogout">
                                <img src="~/img/logout.gif" alt="">
                                登出 (Logout)
                            </li>
                        </ul>
                    </li>
                </ul>

                @* <button class="btn btn-short btn-logout"> 登出</button> *@

            </div>
            <footer>
                &copy; 2024 - SignFlow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </footer>
        </nav>

        <main>
            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
